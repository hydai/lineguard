# LineLint configuration for the lineguard project

# Check Rust source files and documentation
file_extensions = ["rs", "toml", "md", "yml", "yaml"]

# Ignore build artifacts and dependencies
ignore_patterns = [
    "**/target/**",
    "**/.git/**",
    "*.bak",
    "*.tmp"
]

# Enable all checks
[checks]
newline_ending = true
trailing_spaces = true